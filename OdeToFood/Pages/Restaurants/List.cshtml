@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants!</h1>

<form method="get">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <input type="search" class="form-control" asp-for="SearchTerm" />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <span class="oi oi-zoom-in"></span>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <span class="oi oi-pencil"></span>
                </a>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                    <span class="oi oi-trash"></span>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New Resturant</a>

@section footer
{
    <div>@Model.Message</div>
}




